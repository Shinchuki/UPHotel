<Page x:Class="UPHotel.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UPHotel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid x:Name="MenuGrid">
        <Button x:Name="HotelsButton" Content="Отели" HorizontalAlignment="Left" Margin="10" VerticalAlignment="Top" Width="80" Height = "40" Click="HotelsButton_Click"/>
        <Button x:Name="ToursButton" Content="Туры" HorizontalAlignment="Left" VerticalAlignment="Top" Width="80" Height = "40" Click="ToursButton_Click" Margin="120,10,0,0"/>
    </Grid>
</Page>
